<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".WeatherFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/cityField"
        tools:layout_editor_absoluteX="9dp">

        <TextView
            android:id="@+id/temperatureField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/temperatur"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/cityField"
            tools:layout_conversion_absoluteHeight="482dp"
            tools:layout_conversion_absoluteWidth="28dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="28dp"
            tools:layout_editor_absoluteX="0dp"
            tools:text="16 C" />

        <TextView
            android:id="@+id/detailsField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/detaljer"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@+id/cityField"
            tools:layout_conversion_absoluteHeight="132dp"
            tools:layout_conversion_absoluteWidth="0dp"
            tools:layout_conversion_absoluteX="0dp"
            tools:layout_conversion_absoluteY="71dp"
            tools:layout_editor_absoluteX="0dp"
            tools:text="Detaljer" />
    </LinearLayout>

    <TextView
        android:id="@+id/updatedField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oppdatert"
        app:layout_constraintTop_toBottomOf="@+id/weatherIconField"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="138dp"
        tools:layout_conversion_absoluteX="123dp"
        tools:layout_conversion_absoluteY="28dp"
        tools:text="for fÃ¥ minutter siden..."
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/cityField"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8sp"
        android:text="@string/city"
        android:textSize="24sp"
        tools:text="City"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteHeight="28dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="28dp" />

    <TextView
        android:id="@+id/weatherIconField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/weathericon"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_conversion_absoluteHeight="71dp"
        tools:layout_conversion_absoluteWidth="367dp"
        tools:layout_conversion_absoluteX="8dp"
        tools:layout_conversion_absoluteY="220dp"
        tools:text="SkyerOgRegn" />

</android.support.constraint.ConstraintLayout>


