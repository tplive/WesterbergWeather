<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".WeatherFragment">

    <TextView
        android:id="@+id/cityField"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8sp"
        android:text="@string/city"
        android:textSize="24sp"
        tools:layout_conversion_absoluteHeight="28dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:text="City" />

    <TextView
        android:id="@+id/temperatureField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/temperatur"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/detailsField"
        app:layout_constraintRight_toLeftOf="@+id/weatherIconField"
        app:layout_constraintTop_toBottomOf="@+id/cityField"
        tools:layout_conversion_absoluteHeight="482dp"
        tools:layout_conversion_absoluteWidth="28dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="28dp"
        tools:text="16 C" />

    <TextView
        android:id="@+id/detailsField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/detaljer"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/cityField"
        tools:layout_conversion_absoluteHeight="132dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="71dp"
        tools:text="Detaljer\n                 blabla\nblabla"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/weatherIconField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/weathericon"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_conversion_absoluteHeight="71dp"
        tools:layout_conversion_absoluteWidth="367dp"
        tools:layout_conversion_absoluteX="8dp"
        tools:layout_conversion_absoluteY="220dp"
        tools:text="O"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cityField"
        app:layout_constraintVertical_bias="0.22000003"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/detailsField"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.516" />

    <TextView
        android:id="@+id/updatedField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oppdatert"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="138dp"
        tools:layout_conversion_absoluteX="123dp"
        tools:layout_conversion_absoluteY="28dp"
        tools:text="for fÃ¥ minutter siden..."
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/detailsField" />

</android.support.constraint.ConstraintLayout>


